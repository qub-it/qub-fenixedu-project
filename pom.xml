<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.fenixedu</groupId>
		<artifactId>fenix-framework-project</artifactId>
		<version>2.4.0</version>
		<relativePath />
	</parent>

	<groupId>com.qubit.solution.fenixedu.build</groupId>
	<artifactId>qub-fenixedu-project</artifactId>
	<packaging>pom</packaging>
	<version>1.2.0</version>


	<name>qub-fenixedu-project</name>

	<properties>
		<version.spotbugs>3.1.12</version.spotbugs>
		<version.spotbugs.plugin.sb-contrib>7.4.6</version.spotbugs.plugin.sb-contrib>
		<version.spotbugs.plugin.findsec>1.9.0</version.spotbugs.plugin.findsec>
		<version.checkStyles.plugin>3.1.0</version.checkStyles.plugin>

		<java.compilation.release>11</java.compilation.release>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<version.org.apache.maven.plugins.maven.compiler.plugin>3.8.0</version.org.apache.maven.plugins.maven.compiler.plugin>

		<version.org.apache.maven.plugins.maven.javadoc.plugin>3.1.1</version.org.apache.maven.plugins.maven.javadoc.plugin>

		<version.pt.ist.fenix.framework>2.8.0</version.pt.ist.fenix.framework>
		<version.pt.ist.ff.maven.plugin>${version.pt.ist.fenix.framework}</version.pt.ist.ff.maven.plugin>

		<version.org.apache.maven.plugins.maven.jar.plugin>3.2.0</version.org.apache.maven.plugins.maven.jar.plugin>
	</properties>

	<profiles>
		<profile>
			<id>static-analysis</id>
			<activation>
				<property>
					<name>static-analysis</name>
				</property>
			</activation>

			<build>
				<plugins>
					<plugin>
						<groupId>com.github.spotbugs</groupId>
						<artifactId>spotbugs-maven-plugin</artifactId>
						<version>${version.spotbugs}</version>
						<dependencies>
							<dependency>
								<groupId>com.github.spotbugs</groupId>
								<artifactId>spotbugs</artifactId>
								<version>${version.spotbugs}</version>
							</dependency>
						</dependencies>
						<executions>
							<execution>
								<id>run-spotbugs</id>
								<phase>verify</phase>
								<goals>
									<goal>spotbugs</goal>
								</goals>
								<configuration>
									<spotbugsXmlOutputDirectory>${project.basedir}</spotbugsXmlOutputDirectory>
									<excludeFilterFile>${user.home}/.qub/spotbugs-exclude.xml</excludeFilterFile>
									<maxHeap>2048</maxHeap>
									<plugins>
										<plugin>
											<groupId>com.mebigfatguy.sb-contrib</groupId>
											<artifactId>sb-contrib</artifactId>
											<version>${version.spotbugs.plugin.sb-contrib}</version>
										</plugin>
										<plugin>
											<groupId>com.h3xstream.findsecbugs</groupId>
											<artifactId>findsecbugs-plugin</artifactId>
											<version>${version.spotbugs.plugin.findsec}</version>
										</plugin>
									</plugins>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-checkstyle-plugin</artifactId>
						<version>${version.checkStyles.plugin}</version>
						<executions>
							<execution>
								<id>validate</id>
								<phase>validate</phase>
								<goals>
									<goal>check</goal>
								</goals>
								<configuration>
									<configLocation>${user.home}/.qub/google_modified_checks.xml</configLocation>
									<encoding>${project.build.sourceEncoding}</encoding>
									<outputFile>${project.basedir}/checkstyle_errors.xml</outputFile>
									<outputFileFormat>xml</outputFileFormat>
									<failsOnError>false</failsOnError>
									<linkXRef>false</linkXRef>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-pmd-plugin</artifactId>
						<version>3.13.0</version>
						<executions>
							<execution>
								<id>validate-duplicate-code</id>
								<phase>validate</phase>
								<goals>
									<goal>cpd</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<targetDirectory>${project.basedir}</targetDirectory>
							<linkXref>true</linkXref>
							<sourceEncoding>utf-8</sourceEncoding>
							<minimumTokens>100</minimumTokens>
							<targetJdk>11</targetJdk>
							<excludes>
								<exclude>**/*_Base.java</exclude>
							</excludes>
							<excludeRoots>
								<excludeRoot>target/generated-sources/*</excludeRoot>
							</excludeRoots>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${version.org.apache.maven.plugins.maven.compiler.plugin}</version>
					<configuration>
						<verbose>false</verbose>
						<release>${java.compilation.release}</release>
						<maxmem>2048</maxmem>
						<meminitial>1024</meminitial>
						<fork>true</fork>
					</configuration>
					<executions>
						<execution>
							<id>default-compile</id>
							<phase>compile</phase>
							<goals>
								<goal>compile</goal>
							</goals>
							<configuration>
								<verbose>false</verbose>
								<fork>true</fork>
								<release>${java.compilation.release}</release>
								<maxmem>2048</maxmem>
								<meminitial>1024</meminitial>
							</configuration>
						</execution>
						<execution>
							<id>default-testCompile</id>
							<phase>test-compile</phase>
							<goals>
								<goal>testCompile</goal>
							</goals>
							<configuration>
								<verbose>false</verbose>
								<fork>true</fork>
								<release>${java.compilation.release}</release>
								<maxmem>2048</maxmem>
								<meminitial>1024</meminitial>
							</configuration>
						</execution>
					</executions>

				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<repositories>
                <repository>
                        <id>ulisboa-repo</id>
                        <url>http://nexjen.ulisboa.pt/nexus/content/groups/public/</url>
                </repository>
                <repository>
                        <id>qubIT-repo-public</id>
                        <url>https://repository.qub-it.com/nexus/content/groups/public</url>
                </repository>
                <repository>
                        <id>qubIT-repo</id>
                        <url>https://repository.qub-it.com/nexus/content/groups/qubITRepo</url>
                </repository>
        </repositories>

	<distributionManagement>
		<repository>
			<id>qubIT-repo</id>
			<url>https://repository.qub-it.com/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>qubIT-repo</id>
			<url>https://repository.qub-it.com/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

</project>
